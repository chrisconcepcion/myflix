%article.video_category
  - @categories.each do |category|
    %header
      %h3= link_to "#{category.name}", category_path(category.id)
    .videos.row
      - category.recent_videos.each do |video|
        .video.span2
          = link_to video_path(video) do
            %img(src="/tmp/#{video.small_cover_url}")