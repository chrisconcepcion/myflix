%section#top-header.row
  %h1.span2
    = link_to "MyFLiX", root_path
  - if current_user  
    %ul.span4.clearfix
      %li= link_to "Videos", home_path
      %li= link_to "My Queue", my_queue_path
      %li= link_to "People", people_path
    = form_tag search_videos_path, method: 'get', class: 'span5 for-search' do
      %input.search-query(type="text" placeholder="Search for videos here" name="keyword")
      = button_tag "Search", name: nil, class: 'btn' 
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.full_name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              %a= link_to "Sign Out", sign_out_path
