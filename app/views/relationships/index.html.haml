%section.people
  %header
    %h2 People I Follow
  %table.table
    %thead
      %tr
        %th(width="30%")
        %th(width="20%") Videos in Queue
        %th(width="20%") Followers
        %th(width="30%") Unfollow
    %tbody
      - @relationships.each do |relationship|
        %tr
          %td
            %img(src="http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest('relationship.leader_email'.downcase)}?s=40")
            = link_to "#{relationship.leader_name}", user_path(relationship.leader)
          %td.extra-padding #{relationship.leader_total_queue_items}
          %td.extra-padding #{relationship.leader_total_followers}
          %td.extra-padding
            = link_to "", method: :post do
              %i.icon-remove